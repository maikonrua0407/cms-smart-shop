                                        @foreach (DataRow r in dt.Rows)
                                        {
                                            giaBan = decimal.Parse(r["YTE_GIA_BAN"].ToString());
                                            dChietKhau = 0;
                                            string path = HeThong.duongdan_anhSP(Convert.ToInt32(r["ID"]), r["YTE_ANH_CHINH"].ToString());
